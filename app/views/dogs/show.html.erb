<% content_for(:title, "#{@dog.name} | @ThePark!") %>
<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <h2><%= @dog.name %></h2>
    <ul>
      <% if @dog.age != 0 %>
        <li><%= @dog.age %></li>
      <% else %>
        <li>Not given</li>
      <% end %>
      <% if !@dog.breed.empty? %>
        <li><%= @dog.breed %></li>
      <% else %>
        <li>Not given</li>
      <% end %>
    </ul><br/>
    <p><%= link_to "Update info", edit_user_dog_path(@user, @dog), class: "btn btn-primary" %>
    <p><%= link_to "Delete dog", user_dog_path(@user, @dog), data: { confirm: "You're about to delete a dog! Are you sure?",
                                                                  method: "delete"},
                                                                  class: "btn btn-danger" %>

  </div>
</div>
