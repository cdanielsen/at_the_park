<% content_for(:title, "#{@user.name} | @ThePark!") %>

<div class = "row">
  <div class = "col-md-4">
    <h1>Edit user</h1>
    <%= render('layouts/errors', :object => @user) %>
    <form action="/users/<%= @user.id %>" role="form" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <label for="user_name">Name (required)</label>
        <input id="user_name" class="form-control" name="user[name]" type="text" value="<%= @user.name %>">
      </div>
      <div class="form-group">
        <label for="user_gender">Gender (optional)</label>
        <input id="user_gender" class="form-control" name="user[gender]" type="text" value="<%= @user.gender %>">
      </div>
      <div class="form-group">
        <label for="user_age">Age (optional)</label>
        <input id="user_age" class="form-control" name="user[age]" type="text" value="<%= @user.age %>">
      </div>
      <button type="submit" class="btn btn-primary">Update user</button>
    </div>
  </div>
</div>
