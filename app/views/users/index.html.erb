<% content_for(:title, "Users | @ThePark!") %>

<div class='container'>
  <div class='row text-center'>
    <div class="col-md-12">
      <h1>Current Users</h1>
    </div>
  </div>
<div class='row'>
  <div class='col-md-6'>
    <ul>
      <% @users.all.each do |user| %>
        <li><%= link_to "#{user.name}", "/users/#{user.id}" %></li>
      <% end %>
    </ul>
    <%= link_to "Create New", "/users/new", class: "btn btn-info" %>
  </div>
</div>
